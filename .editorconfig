root = true

[*]
charset = utf-8
indent_style = tab
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.ts]
quote_type = single
ij_typescript_use_double_quotes = false
ij_typescript_use_semicolon_after_statement = true
max_line_length = 140
ij_smart_tabs = true

[*.md]
max_line_length = off
trim_trailing_whitespace = false
