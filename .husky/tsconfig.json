{
	"compilerOptions": {
		"target": "es2020",
		"module": "commonjs",
		"declaration": true,
		"outDir": "../../dist",
		"strict": true,
		"strictPropertyInitialization": false,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"rootDir": "./src",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}